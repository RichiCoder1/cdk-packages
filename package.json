{
  "workspaces": [
    "packages/**"
  ],
  "scripts": {
    "build": "turbo run build",
    "docs": "turbo run docs",
    "release:build": "turbo run release",
    "release:publish": "changeset publish",
    "release": "run-s release:*"
  },
  "packageManager": "pnpm@6.27.0",
  "turbo": {
    "baseBranch": "origin/main",
    "npmClient": "pnpm",
    "pipeline": {
      "build": {
        "dependsOn": [
          "^build"
        ],
        "outputs": [
          ".cdk-out/**",
          ".jsii"
        ]
      },
      "docs": {
        "dependsOn": ["build"],
        "outputs": ["API.md"]
      },
      "release": {
        "dependsOn": [
          "build"
        ]
      }
    }
  },
  "devDependencies": {
    "@changesets/cli": "^2.19.0",
    "npm-run-all": "^4.1.5",
    "turbo": "^1.0.28"
  }
}
